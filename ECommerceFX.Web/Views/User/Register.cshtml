@inherits NancyRazorViewBase<ECommerceFX.Web.Modules.RegisterViewModel>

@{
  Layout = "Layout.cshtml";
}


<div class="well bs-component col-md-6">
  <div class="row">
    <form class="form-horizontal col-md-12" action="~/users/register" method="POST">
      <fieldset>
        <legend>Register</legend>

        @Html.Partial("Views/_ValidationErrors.cshtml", Model.Errors)

        <div class="form-group">
          <label for="username" class="col-md-2">Username</label>
          <div class="col-md-10">
            <input class="form-control" type="text" name="username" placeholder="Username" />
          </div>
        </div>

        <div class="form-group">
          <label for="email" class="col-md-2">Email</label>
          <div class="col-md-10">
            <input class="form-control" type="email" name="email" placeholder="Email" />
          </div>
        </div>

        <div class="form-group">
          <label for="password" class="col-md-2">Password</label>
          <div class="col-md-10">
            <input class="form-control" type="password" name="password" placeholder="Password" />
          </div>
        </div>

        <div class="form-group">
          <label for="confirmpassword" class="col-md-2">Confirm Password</label>
          <div class="col-md-10">
            <input class="form-control" type="password" name="confirmpassword" placeholder="Confirm Password" />
          </div>
        </div>

        <div class="row col-md-12">
          <input class="btn btn-success col-md-3 col-md-push-10" type="submit" value="Register" />
          <a href="~/users/login"><input class="btn btn-info col-md-3 col-md-push-3" type="button" value="Login" /></a>
        </div>
      </fieldset>
    </form>
  </div>
</div>

